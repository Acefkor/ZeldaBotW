    <TextView
        android:id="@+id/nivel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mat1L3"
        android:layout_centerHorizontal="true"
        android:text="@string/nivel4"
        android:textColor="@color/nivel4" />

    <TextView
        android:id="@+id/MAT1L4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/nivel4"
        android:text="@string/mat1" />

    <TextView
        android:id="@+id/MAT2L4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/nivel4"
        android:text="@string/mat2" />

    <TextView
        android:id="@+id/mat1L4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/MAT1L4" />

    <TextView
        android:id="@+id/mat2L4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/MAT2L4" />

</RelativeLayout>
